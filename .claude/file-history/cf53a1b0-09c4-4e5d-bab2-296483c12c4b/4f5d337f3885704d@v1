        "fonte": "bulario_anvisa"
    },
]

def main():
    print("Conectando ao banco de dados...")
    conn = pymysql.connect(
        host='localhost',
        port=3307,
        user='root',
        password='f68interdb',
        database='dbaione',
        charset='utf8mb4'
    )

    cursor = conn.cursor()

    # Limpar tabela
    print("Limpando dados anteriores...")
    cursor.execute("DELETE FROM copilot_medicamento_info WHERE id > 0")

    # Inserir medicamentos
    print(f"Inserindo {len(MEDICAMENTOS)} medicamentos...")

    sql = """
    INSERT INTO copilot_medicamento_info (
        principio_ativo, nome_comercial, posologia_padrao, orientacao_uso,
        horario_ideal, armazenamento, efeitos_colaterais, interacao_alimentos,
        interacao_medicamentos, retem_receita, tipo_receita, alerta_idoso,
        alerta_pediatrico, alerta_gestante, alerta_lactante, alerta_renal,
        alerta_hepatico, fonte
    ) VALUES (
        %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s
    )
    """

    for i, med in enumerate(MEDICAMENTOS, 1):
        cursor.execute(sql, (
            med["principio_ativo"],
            med["nome_comercial"],
            med["posologia_padrao"],
            med["orientacao_uso"],
            med["horario_ideal"],
            med["armazenamento"],
            med["efeitos_colaterais"],
            med["interacao_alimentos"],
            med["interacao_medicamentos"],
            med["retem_receita"],
            med["tipo_receita"],
            med["alerta_idoso"],
            med["alerta_pediatrico"],
            med["alerta_gestante"],
            med["alerta_lactante"],
            med["alerta_renal"],
            med["alerta_hepatico"],
            med["fonte"]
        ))

        if i % 20 == 0:
            print(f"  {i}/{len(MEDICAMENTOS)} inseridos...")

    conn.commit()

    # Verificar
    cursor.execute("SELECT COUNT(*) FROM copilot_medicamento_info")
    total = cursor.fetchone()[0]
    print(f"\nTotal de medicamentos inseridos: {total}")

    # Mostrar alguns exemplos
    cursor.execute("""
        SELECT principio_ativo, nome_comercial, tipo_receita
        FROM copilot_medicamento_info
        LIMIT 10
    """)
    print("\nExemplos:")
    for row in cursor.fetchall():
        print(f"  - {row[0]} ({row[1]}) - {row[2]}")

    cursor.close()
    conn.close()
    print("\nPopulação concluída com sucesso!")

if __name__ == '__main__':
    main()
